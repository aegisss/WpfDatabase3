<Window x:Class="Database.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Database"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="3*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <DataGrid x:Name="RangDataGrid" d:ItemsSource="{d:SampleData ItemCount=5}" Grid.Row="0"/>
        <Button x:Name="Button1" Content="Удалить" HorizontalAlignment="Left" Margin="112,59,0,0" Grid.Row="1" VerticalAlignment="Top" Height="49" Width="455" Background="#FF981AD4" Click="Button1_Click" />
        <Button x:Name="GoToNext" Content="К следующей таблице" HorizontalAlignment="Left" Margin="641,186,0,0" VerticalAlignment="Top" Height="47" Width="149" Click="GoToNext_Click"/>
    </Grid>
</Window>
